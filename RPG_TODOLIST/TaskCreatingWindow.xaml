<Window x:Class="RPG_TODOLIST.TaskCreatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_TODOLIST"
        mc:Ignorable="d"
        Title="Добавить задачу" Height="349" Width="575">
    <Canvas HorizontalAlignment="Center" Width="575" Height="332" VerticalAlignment="Center">
        <Button Content="ДОБАВИТЬ" HorizontalAlignment="Left" VerticalAlignment="Center" Height="71" Width="574" Background="#FF71FF00" Foreground="White" FontSize="48" Canvas.Top="251" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="304" Height="80" Canvas.Left="29" Canvas.Top="34"/>
        <Calendar SelectedDatesChanged="changeDate" x:Name="cal" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="345" Canvas.Top="32" Height="165"/>
        <TextBox Name="date" Canvas.Left="380" TextWrapping="Wrap" Text="" Canvas.Top="14" Width="144" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="ДО:" Canvas.Left="345" Canvas.Top="10" RenderTransformOrigin="-0.234,0.425" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="ОПИСАНИЕ ЗАДАЧИ" Canvas.Left="116" Canvas.Top="8" HorizontalAlignment="Left" VerticalAlignment="Center" Width="130"/>
        <Label Content="СЛОЖНОСТЬ ВЫПОЛНЕНИЯ" Canvas.Left="97" Canvas.Top="119" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ListBox Name="diffsLB" Height="65"   Width="222"  Canvas.Left="70" Canvas.Top="145" RenderTransformOrigin="0.427,0.41" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ListBoxItem Background="Black" Foreground="White">Легкая</ListBoxItem>
            <ListBoxItem Background="#FFFFC700" Foreground="White">Средняя</ListBoxItem>
            <ListBoxItem>Сложная</ListBoxItem>
        </ListBox>

    </Canvas>
</Window>
